@page
@model SistemaAcademico.Pages.Alumnos.IndexModel

<a asp-page="Create" class="btn btn-success mb-3">Agregar Alumno</a>
@if (Model.Alumnos.Count == 0)
{
	<p class="text-muted">no hay alumnos cargados</p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Apellido</th>
				<th>DNI</th>
				<th>Email</th>
				<th>Fecha de nacimiento</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var alumno in Model.Alumnos)
			{
				<tr>
					<td>@alumno.Id</td>
					<td>@alumno.Name</td>
					<td>@alumno.LastName</td>
					<td>@alumno.Dni</td>
					<td>@alumno.Email</td>
					<td>@alumno.DateOfBirth</td>
					<td>
						<a asp-page="Edit" asp-route-id="@alumno.Id" class="btn btn-warning btn-sm">Editar</a>
						<a asp-page="Delete" asp-route-id="@alumno.Id" class="btn btn-danger btn-sm">Eliminar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}