@page
@model SistemaAcademico.Pages.Alumnos.CreateModel
@{
}
<form method="post">
    <div class="form-group">
        <label asp-for="Alumno.Name"></label>
        <input asp-for="Alumno.Name" class="form-control" />
        <span asp-validation-for="Alumno.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.LastName"></label>
        <input asp-for="Alumno.LastName" class="form-control" />
        <span asp-validation-for="Alumno.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.Dni"></label>
        <input asp-for="Alumno.Dni" class="form-control" />
        <span asp-validation-for="Alumno.Dni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.Email"></label>
        <input asp-for="Alumno.Email" class="form-control" />
        <span asp-validation-for="Alumno.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.DateOfBirth"></label>
        <input asp-for="Alumno.DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="Alumno.DateOfBirth" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>