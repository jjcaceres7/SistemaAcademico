@page
@model SistemaAcademico.Pages.Carreras.IndexModel

<a asp-page="Create" class="btn btn-success mb-3">Agregar carrera</a>
@if (Model.Carreras.Count == 0)
{
	<p class="text-muted">No hay carreras cargadas</p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Modalidad</th>
				<th>Duración(años)</th>
				<th>Título otorgado</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var carrera in Model.Carreras)
			{
				<tr>
					<td>@carrera.Id</td>
					<td>@carrera.Name</td>
					<td>@carrera.Modality</td>
					<td>@carrera.Years</td>
					<td>@carrera.Title</td>
					<td>
						<a asp-page="Edit" asp-route-id="@carrera.Id" class="btn btn-warning btn-sm">Editar</a>
						<a asp-page="Delete" asp-route-id="@carrera.Id" class="btn btn-danger btn-sm">Eliminar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}